<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_account_check" model="ir.actions.act_window">
            <field name="name">Tüm Çekler</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yeni bir çek kaydı oluşturun!
                </p>
            </field>
        </record>

        <record id="action_account_check_received" model="ir.actions.act_window">
            <field name="name">Alınan Çekler</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('check_type', '=', 'received')]</field>
            <field name="context">{'default_check_type': 'received'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yeni bir alınan çek kaydı oluşturun!
                </p>
            </field>
        </record>

        <record id="action_account_check_issued" model="ir.actions.act_window">
            <field name="name">Verilen Çekler</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('check_type', '=', 'issued')]</field>
            <field name="context">{'default_check_type': 'issued'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yeni bir verilen çek kaydı oluşturun!
                </p>
            </field>
        </record>
    </data>
</odoo>